{
  "name": "faithstories-api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "test": "npm --prefix backend/api test",
    "test:api": "npm --prefix backend/api test",
    "lint:api": "npm --prefix backend/api run lint",
    "prepare-db": "node create_db.js",
    "migrate": "node create_db.js && npx knex migrate:latest --knexfile knexfile.js",
    "rollback": "npx knex migrate:rollback --knexfile knexfile.js",
    "seed": "npx knex seed:run --knexfile knexfile.js",
    "dev:docker": "docker compose -f docker-compose.dev.yml up --build",
    "dev:docker:down": "docker compose -f docker-compose.dev.yml down --volumes --remove-orphans",
    "dev:docker:logs": "docker compose -f docker-compose.dev.yml logs --follow",
    "start": "concurrently -n frontend,admin,api -c green,magenta,cyan \"npm --prefix frontend run dev\" \"npm --prefix frontend-admin run dev\" \"npm --prefix backend/api run dev\""
  },
  "dependencies": {
    "knex": "^2.5.1",
    "mysql2": "^3.3.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "concurrently": "^9.0.0"
  }
}
