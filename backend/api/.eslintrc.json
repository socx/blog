{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "eqeqeq": ["error", "smart"]
  }

  ,
  "overrides": [
    {
      "files": ["**/*.test.js", "test/**/*.js"],
      "env": { "jest": true }
    }
  ]
}
